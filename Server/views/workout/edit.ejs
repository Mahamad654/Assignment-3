<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="ExerciseTextField">Exercise</label>
                    <input type="text" class="form-control" id="ExerciseTextField"
                    placeholder="Enter the Exercise" name="Exercise" value="<%= Workout.Exercise %>" required>
                </div>

                <div class="form-group">
                    <label for="DateTextField">Date</label>
                    <input type="text" class="form-control" id="DateTextField"
                    placeholder="Enter the Date" name="Date" value="<%= Workout.Date %>" required>
                </div>

                <div class="form-group">
                    <label for="SetsTextField"># of Sets</label>
                    <input type="text" class="form-control" id="SetsTextField"
                    placeholder="Enter the Sets" name="Sets" value="<%= Workout.Sets %>" required>
                </div>

                <div class="form-group">
                    <label for="RepsTextField"># of Reps</label>
                    <input type="text" class="form-control" id="RepsTextField"
                    placeholder="Enter your Reps" name="Reps" value="<%= Workout.Reps %>" required>
                </div>

                <div class="form-group">
                    <label for="WeightTextField">Weight (Lbs)</label>
                    <input type="text" class="form-control" id="WeightTextField"
                    placeholder="Enter your Weight" name="Weight" value="<%= Workout.Weight %>" required>
                </div>

                <div class="form-group">
                    <label for="NotesTextField">Notes</label>
                    <input type="text" class="form-control" id="NotesTextField"
                    placeholder="Enter your Notes" name="Notes" value="<%= Workout.Notes %>" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Submit</button>

                <a href="/Tracker" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>