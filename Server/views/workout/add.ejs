<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="ExerciseTextField">Exercise</label>
                    <input type="text" class="form-control" id="ExerciseTextField"
                    placeholder="Enter the Exercise" name="Exercise" required>
                </div>

                <div class="form-group">
                    <label for="DateTextField">Date</label>
                    <input type="Date" class="form-control" id="DateTextField"
                    placeholder="Enter the Date" name="Date" required>
                </div>

                <div class="form-group">
                    <label for="SetsTextField"># Sets</label>
                    <input type="number" class="form-control" id="SetsTextField"
                    placeholder="Enter the # of Sets (0, if not applicable)" name="Sets" required>
                </div>

                <div class="form-group">
                    <label for="RepsTextField"># Reps</label>
                    <input type="number" class="form-control" id="RepsTextField"
                    placeholder="Enter the # of Reps (0, if not applicable)" name="Reps" required>
                </div>

                <div class="form-group">
                    <label for="WeightTextField">Weight (Lbs)</label>
                    <input type="number" class="form-control" id="WeightTextField"
                    placeholder="Enter your Weight (0, if not applicable)" name="Weight" required>
                </div>

                
                <div class="form-group">
                    <label for="NotesTextField">Notes</label>
                    <input type="text" class="form-control" id="NotesTextField"
                    placeholder="Enter your Notes" name="Notes" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Submit</button>

                <a href="/Tracker" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>